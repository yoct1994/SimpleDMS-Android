<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_item"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/list_item_view"
        android:elevation="8dp"
        android:outlineSpotShadowColor="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/point_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:textSize="23sp"
        android:textColor="@color/gray"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="@id/view_item"
        app:layout_constraintTop_toTopOf="@+id/view_item"
        android:layout_marginTop="16.5dp"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/point_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/nanum_regular"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/point_reason"
        app:layout_constraintLeft_toLeftOf="@id/point_reason"
        />

    <TextView
        android:id="@+id/point_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:fontFamily="@font/hanna_pro"
        android:includeFontPadding="false"
        android:textSize="40sp"
        android:textColor="@color/orange"
        app:layout_constraintRight_toRightOf="@id/view_item"
        app:layout_constraintTop_toTopOf="@id/view_item"
        app:layout_constraintBottom_toBottomOf="@id/view_item"
        android:layout_marginRight="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>