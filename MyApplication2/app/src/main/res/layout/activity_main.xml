<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity"
    android:background="@color/orange">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_logo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.27"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/login_btn_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="35dp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/login_btn_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="35dp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/login_btn_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/small_logo"
        app:layout_constraintTop_toTopOf="@id/guideline_logo_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPLE"
        android:elevation="10dp"
        android:shadowColor="@color/black"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/hanna_pro"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DMS"
        android:elevation="10dp"
        android:shadowColor="@color/black"
        android:fontFamily="@font/hanna_pro"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/simple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/main_login_btn"
        android:text="LOGIN"
        android:elevation="10dp"
        android:shadowColor="@color/black"
        android:textColor="@color/gray"
        android:fontFamily="@font/nanum_regular"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/login_btn_B"
        app:layout_constraintLeft_toLeftOf="@id/login_btn_L"
        app:layout_constraintRight_toRightOf="@id/login_btn_R"
        />



</androidx.constraintlayout.widget.ConstraintLayout>